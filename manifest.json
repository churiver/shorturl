{
  "manifest_version": 2,

  "name": "Short URL",
  "description": "This extension generates a short URL of the current tab's URL",
  "version": "0.1",

  "browser_action": {
    "default_icon": {
      "19": "icon.png"
      },
    "default_popup": "shorturl.html",
    "default_title": "Short URL"
  },
  "permissions": [
    "activeTab",
    "http://tiny-url.info/"
  ]
}
